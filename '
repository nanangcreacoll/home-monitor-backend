package main

import (
	"home-monitor-backend/database"
	"home-monitor-backend/routes"
	"log"

	"github.com/gin-gonic/gin"
	"github.com/joho/godotenv"
)

func main() {
	err := godotenv.Load()
	if err != nil {
		log.Fatal("Error loading .env file")
	}

	database.ConnectDB()

	r := gin.Default()

	routes.UserRoutes(r)

	r.Run(":8080")
}
